{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "console_title_template": "{{ .Shell }} in {{ .Folder }}",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "cache_duration": "none",
            "debian": "\uf306",
            "windows": "\uf17a"
          },
          "leading_diamond": "\ue737",
          "template": " {{ if .WSL }}WSL at {{ end }}{{.Icon}} ",
          "foreground": "#fabd2f",
          "background": "#689d6a",
          "type": "os",
          "style": "diamond"
        },
        {
          "properties": {
            "cache_duration": "none"
          },
          "trailing_diamond": "\ue0bc",
          "template": " {{if .Root}}{{ .UserName }}üíÄ{{ .HostName }} {{else}}{{ .UserName }}@{{ .HostName }} {{end}} ",
          "foreground": "#fabd2f",
          "background": "#689d6a",
          "type": "session",
          "style": "diamond",
          "foreground_templates": [
            "{{if .Root}}#fb4934{{end}}"
          ]
        },
        {
          "properties": {
            "cache_duration": "none",
            "folder_icon": "\uea7c",
            "folder_separator_icon": " / ",
            "home_icon": "\uf015 ",
            "mapped_locations": {},
            "max_depth": 1,
            "style": "agnoster_short"
          },
          "trailing_diamond": "\ue0b4",
          "template": " {{ .Path }} ",
          "foreground": "transparent",
          "background": "#d79921",
          "type": "path",
          "style": "diamond"
        },
        {
          "properties": {
            "cache_duration": "none",
            "fetch_stash_count": true,
            "fetch_status": true
          },
          "trailing_diamond": "\ue0b4",
          "template": " {{ .UpstreamIcon }}{{ .HEAD }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }} ",
          "foreground": "#ebdbb2",
          "background": "#cc241d",
          "type": "git",
          "style": "diamond",
          "foreground_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#fabd2f{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#ebdbb2{{ end }}",
            "{{ if gt .Ahead 0 }}#b8bb26{{ end }}",
            "{{ if gt .Behind 0 }}#b16286{{ end }}"
          ]
        },
        {
          "properties": {
            "cache_duration": "none"
          },
          "trailing_diamond": "\ue0b4",
          "template": "<transparent> \uf12a</> {{ .Meaning }} ",
          "background": "#910000",
          "type": "status",
          "style": "diamond"
        }
      ]
    },
    {
      "type": "rprompt",
      "alignment": "right",
      "segments": [
        {
          "properties": {
            "always_enabled": true,
            "cache_duration": "none"
          },
          "leading_diamond": "\ue0b6",
          "trailing_diamond": "\ue0bc",
          "template": " \udb86\udd9f {{ .FormattedMs }}",
          "foreground": "transparent",
          "background": "#ebdbb2",
          "type": "executiontime",
          "style": "diamond",
          "invert_powerline": true
        },
        {
          "properties": {
            "cache_duration": "none"
          },
          "trailing_diamond": "\ue0b4",
          "template": " \udb85\udc4e {{ .CurrentDate | date .Format }} ",
          "foreground": "#ebdbb2",
          "background": "#928374",
          "type": "time",
          "style": "diamond",
          "invert_powerline": true
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "always_enabled": true,
            "cache_duration": "none"
          },
          "template": "‚ùØ ",
          "foreground": "#ebdbb2",
          "type": "text",
          "style": "plain",
          "foreground_templates": [
            "{{ if gt .Code 0 }}#ff0000{{ end }}"
          ]
        }
      ],
      "newline": true
    }
  ],
  "version": 3,
  "final_space": true
}
