{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "final_space": true,
  "console_title_template": "{{ .Shell }} in {{ .Folder }}",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "os",
          "style": "diamond",
          "background": "#689d6a",
          "foreground": "#fabd2f",
          "leading_diamond": "Óú∑",
          "template": " {{ if .WSL }}WSL at {{ end }}{{.Icon}} ",
          "properties": {
            "debian": "\uf306",
            "windows": "\uf17a"
          }
        },
        {
          "type": "session",
          "style": "diamond",
          "foreground_templates": [
            "{{if .Root}}#fb4934{{end}}"
          ],
          "trailing_diamond": "\ue0bc",
          "background": "#689d6a",
          "foreground": "#fabd2f",
          "template": " {{if .Root}}{{ .UserName }}üíÄ{{ .HostName }} {{else}}{{ .UserName }}@{{ .HostName }} {{end}} "
        },
        {
          "type": "path",
          "style": "diamond",
          "trailing_diamond": "\ue0b4",
          "background": "#d79921",
          "foreground": "transparent",
          "template": " {{ .Path }} ",
          "properties": {
            "folder_separator_icon": " / ",
            "folder_icon": "\uea7c",
            "home_icon": "\uf015 ",
            "max_depth": 1,
            "mapped_locations": {},
            "style": "agnoster_short"
          }
        },
        {
          "type": "git",
          "style": "diamond",
          "trailing_diamond": "\ue0b4",
          "background": "#cc241d",
          "foreground": "#ebdbb2",
          "foreground_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#fabd2f{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#ebdbb2{{ end }}",
            "{{ if gt .Ahead 0 }}#b8bb26{{ end }}",
            "{{ if gt .Behind 0 }}#b16286{{ end }}"
          ],
          "template": " {{ .UpstreamIcon }}{{ .HEAD }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }} ",
          "properties": {
            "fetch_stash_count": true,
            "fetch_status": true
          }
        },
        {
          "type": "status",
          "style": "diamond",
          "trailing_diamond": "\ue0b4",
          "background": "#910000",
          "template": "<transparent> \uf12a</> {{ .Meaning }} "
        }
      ]
    },
    {
      "type": "rprompt",
      "alignment": "right",
      "segments": [
        {
          "type": "executiontime",
          "style": "diamond",
          "foreground": "transparent",
          "background": "#ebdbb2",
          "invert_powerline": true,
          "leading_diamond": "\ue0b6",
          "trailing_diamond": "\ue0bc",
          "template": " Û±¶ü {{ .FormattedMs }}",
          "properties": {
            "always_enabled": true
          }
        },
        {
          "type": "time",
          "style": "diamond",
          "invert_powerline": true,
          "trailing_diamond": "\ue0b4",
          "foreground": "#ebdbb2",
          "background": "#928374",
          "template": " Û±ëé {{ .CurrentDate | date .Format }} "
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "foreground": "#ebdbb2",
          "foreground_templates": [
            "{{ if gt .Code 0 }}#ff0000{{ end }}"
          ],
          "template": "‚ùØ ",
          "properties": {
            "always_enabled": true
          }
        }
      ],
      "newline": true
    }
  ]
}
